<UserControl x:Class="IDEF.Controls.FlowNodeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IDEF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"  Width="{Binding Rect.Width}" Height="{Binding Rect.Height}" >
    <!--Width="{Binding Rect.Width}" Height="{Binding Rect.Height}"-->
    <Grid>
        <Grid Background="Red">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding Name}"/>
            <TextBox Text="{Binding CustomerName}" Grid.Row="1"/>
        </Grid>
    </Grid>
</UserControl>
